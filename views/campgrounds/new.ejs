<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3 position-relative">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="invalid-tooltip">
                        Please enter a camground name
                    </div>
                </div>

                <div class="mb-3 position-relative">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="invalid-tooltip">
                        Please enter a location
                    </div>
                </div>
                <div class="mb-3 position-relative">
                    <label class="form-label" for="images">Image Url</label>
                    <input class="form-control" type="file" name="images" id="images" multiple required>
                    <div class="invalid-tooltip">
                        Upload an Image
                    </div>
                </div>
                <div class="mb-3 position-relative">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                    <div class="invalid-tooltip">
                        Please enter a description
                    </div>
                </div>
                <div class="mb-3 position-relative">
                    <label for="price" class="form-label">Price</label>

                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" id="price"
                            name="campground[price]" required>
                        <span class="input-group-text">.00</span>
                        <div class="invalid-tooltip">
                            Please enter a price
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Add Campground</button>
                    <a href="/campgrounds">All campgrounds</a>
                </div>
            </form>
        </div>
    </div>